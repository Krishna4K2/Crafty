# ====================================================
# Environment Variables for Crafty Frontend Service
# ====================================================
# Copy this file to .env and update values as needed

# ====================================================
# Service URLs
# ====================================================
# Catalogue Service (Python/Flask)
PRODUCTS_API_BASE_URI=http://catalogue:5000

# Recommendation Service (Go)
RECOMMENDATION_BASE_URI=http://recommendation:8080

# Voting Service (Java/Spring Boot)
VOTING_BASE_URI=http://voting:8086

# ====================================================
# Server Configuration
# ====================================================
# Port for the frontend service
PORT=3000

# Environment mode
NODE_ENV=development

# ====================================================
# Docker Networking (when using docker-compose)
# ====================================================
# Use these when running with Docker Compose/network
# PRODUCTS_API_BASE_URI=http://catalogue:5000
# RECOMMENDATION_BASE_URI=http://recommendation:8080
# VOTING_BASE_URI=http://voting:8086

# ====================================================
# Development Settings
# ====================================================
# Debug logging
DEBUG=false

# Request timeout (in milliseconds)
REQUEST_TIMEOUT=5000

# ====================================================
# Security Settings
# ====================================================
# CORS origin (for development)
CORS_ORIGIN=http://localhost:3000

# Session secret (generate a random string for production)
SESSION_SECRET=your-secret-key-here
